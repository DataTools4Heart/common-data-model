{
  "resourceType": "StructureDefinition",
  "url": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-MedicationRequest",
  "name": "HFR_MedicationRequest",
  "status": "draft",
  "fhirVersion": "5.0.0",
  "kind": "resource",
  "abstract": false,
  "type": "MedicationRequest",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/MedicationRequest",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "MedicationRequest",
        "path": "MedicationRequest",
        "constraint": [
          {
            "key": "cond-1",
            "severity": "error",
            "expression": "medication.concept.coding.where(system = 'http://www.whocc.no/atc').exists() or medication.concept.coding.where(system = 'https://datatools4heart.eu/fhir/CodeSystem/medication-group').exists()",
            "human": "Either ATC code or ATC group code must be present."
          }
        ]
      },
      {
        "id": "MedicationRequest.medication.concept.coding",
        "path": "MedicationRequest.medication.concept.coding",
        "slicing": {
          "discriminator": [
            {
              "type": "value",
              "path": "system"
            }
          ],
          "rules": "open"
        },
        "min": 1
      },
      {
        "id": "MedicationRequest.medication.concept.coding:atcCode",
        "path": "MedicationRequest.medication.concept.coding",
        "sliceName": "atcCode"
      },
      {
        "id": "MedicationRequest.medication.concept.coding:atcCode.system",
        "path": "MedicationRequest.medication.concept.coding.system",
        "min": 1,
        "fixedUri": "http://www.whocc.no/atc"
      },
      {
        "id": "MedicationRequest.medication.concept.coding:atcCode.code",
        "path": "MedicationRequest.medication.concept.coding.code",
        "min": 1
      },
      {
        "id": "MedicationRequest.medication.concept.coding:atcCodeGroup",
        "path": "MedicationRequest.medication.concept.coding",
        "sliceName": "atcCodeGroup"
      },
      {
        "id": "MedicationRequest.medication.concept.coding:atcCodeGroup.system",
        "path": "MedicationRequest.medication.concept.coding.system",
        "min": 1,
        "fixedUri": "https://datatools4heart.eu/fhir/CodeSystem/medication-group"
      },
      {
        "id": "MedicationRequest.medication.concept.coding:atcCodeGroup.code",
        "path": "MedicationRequest.medication.concept.coding.code",
        "min": 1,
        "binding": {
          "strength": "required",
          "valueSet": "https://datatools4heart.eu/fhir/ValueSet/medication-group"
        }
      },
      {
        "id": "MedicationRequest.subject",
        "path": "MedicationRequest.subject",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Patient"
            ]
          }
        ]
      },
      {
        "id": "MedicationRequest.encounter",
        "path": "MedicationRequest.encounter",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Encounter"
            ]
          }
        ]
      }
    ]
  }
}